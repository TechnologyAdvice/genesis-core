{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "strict": false,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true,
    "pretty": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"]
    }
  },
  "include": [
    "./src"
  ]
}
