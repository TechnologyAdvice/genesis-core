{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist",
    "pretty": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/compilers/web-app/__template__/**"
  ]
}
